# vim: set ft=gitconfig nomodeline:

# git
[core]
    # See https://github.blog/2022-06-27-highlights-from-git-2-37/#a-builtin-filesystem-monitor-for-windows-and-macos
    fsmonitor = true

[user]
    name = "Vadym-Valdis Yudaiev"
    email = "judaew@outlook.de"
    signingkey = "AB1AE3383414A8AD"

[commit]
    gpgsign = true

[push]
    default = current

[pull]
    rebase = true

[color]
    ui = auto

# gpg
[gpg]
    program = gpg2

# git.alias
[alias]
    br = branch
    ls = ls-files
    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard

    shoot = push origin --delete
    unstage = reset HEAD --
    prev = checkout -
    discard = checkout --

# git.diff
[difftool]
    thustExitCode = true

[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE

# git.merge
[merge]
    conflictstyle = diff3

[mergetool "nvimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

# git-lfs
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
