--recurse=yes

# Ignore VCS files
--exclude=.git
--exclude=.svn
--exclude=.hg

# Ignore build, deps, log and db dirs
--exclude=_build
--exclude=build
--exclude=_deps
--exclude=deps
--exclude=vendor
--exclude=node_modules
# --exclude=log/*
# --exclude=db/*

# Ignore swap and backup files
--exclude=*.swp
--exclude=*.bak
--exclude=*.cache

# Ignore minify files (HTML, CSS, JS)
--exclude=\*.min.\*

# Ignore compiled bytecode files
--exclude=\*.pyc
--exclude=\*.luac
