set ideajoin

" Emulate plugins
set NERDTree
set commentary
set highlightedyank
set keep-english-in-normal-and-restore-in-insert

let g:mapleader = ','

" Remove newbie crutches
nmap <Up>    <nop>
nmap <Down>  <nop>
nmap <Left>  <nop>
nmap <Right> <nop>

" Close all but the curren one
nmap <Leader>O :only<CR>

" Better split switching
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

" Buffers
nmap ]b :bnext<CR>
nmap [b :bprev<CR>
" Tabs
nmap ]t :tabn<CR>
nmap [t :tabp<CR>

" Exit on 'jj'
imap jj <Esc>

" Map <C-l> (redraw screen) to also turn off search highlighting until the
" next search
nmap <C-l> :nohl<CR><C-l>

" Copy to clipboar
vmap <Leader>y  "+y
nmap <Leader>Y  "+yg_
nmap <Leader>y  "+y'
nmap <Leader>yy "+yy
" Paste from clipboard
vmap <Leader>p "p
vmap <Leader>P "P
nmap <Leader>p "p
nmap <Leader>P "P

" IDEA specific hotkeys
nmap <C-R> <Action>(Run)
nmap <Leader>r <Action>(Run)
