#!/usr/bin/env sh

if [ "${OSTYPE}" != "darwin"* ]; then
    echo "Error: OS isn't Darwin."
    exit 1
fi

# Adds all available keys to SSH agent
for i in $(find "${HOME}"/.ssh/* -type f ! -name "*.*" | sed \
    's!.*/!!' | sed '/config/,/known_hosts/d; /.pub/d')
do
    ssh-add --apple-use-keychain ~/.ssh/"${i}"||echo "${i}" failed
done
