    signingkey = "E85EF1C4A188CE00"

[credential]
    helper = libsecret

[commit]
    gpgsign = true

[push]
    default = current

[pull]
    rebase = true

[color]
    ui = auto

# gpg
[gpg]
    program = gpg2

# git.alias
[alias]
    br = branch
    ls = ls-files
    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard

    shoot = push origin --delete
    unstage = reset HEAD --
    prev = checkout -
    discard = checkout --

# git.diff
[difftool]
    thustExitCode = true

# git.merge
[merge]
    conflictstyle = zdiff3

# git-lfs
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

# delta
[delta]
    navigate = true
    light = false

[ghq]
    root = "~/wrk"
